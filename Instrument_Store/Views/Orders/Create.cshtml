@model Instrument_Store.Core.Order

@{
    ViewData["Title"] = "Create";
}

<h1>Create a new order</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CustomerId" class="control-label"></label>
                <select asp-for="CustomerId" class="form-control" asp-items="ViewBag.CustomerId"></select>
            </div>
            <div class="form-group">
                <label asp-for="ProductOrdersId" class="control-label"></label>
                <select asp-for="ProductOrdersId" class="form-control" asp-items="ViewBag.ProductOrdersId"></select>
            </div>

            <div class="form-group">
                <label asp-for="products" class="control-label"></label>
                <!--<input asp-for="ProductOrdersId"class="form-control" />-->
                <select asp-for="products" class="form-control">
                    @foreach (var p in Model.products)
                    {
                        <option value=@p.ProductId>@p.Name @p.Price.ToString("#.##") @p.Quantity</option>
                    }
                </select>
                <span asp-validation-for="ProductOrdersId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StoreId" class="control-label"></label>
                <select asp-for="StoreId" class="form-control" asp-items="ViewBag.StoreId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Quantities" class="control-label"></label>
                <input asp-for="Quantities" class="form-control" />
                <span asp-validation-for="Quantities" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TotalPrice" class="control-label"></label>
                <input asp-for="TotalPrice" class="form-control" />
                <span asp-validation-for="TotalPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

